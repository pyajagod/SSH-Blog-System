<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!--实例所在的类包-->
<hibernate-mapping package="com.qwy.blogs.bean">
    <!--配置映射关系-->
    <class name="UserBean" table="blogs_users">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="userId" column="user_id" />
        <property name="userPwd" column="user_pwd" />
        <property name="userName" column="user_name"/>
        <property name="userProsition" column="user_prosition"/>
        <property name="userSex" column="user_sex"/>
    </class>

</hibernate-mapping>
